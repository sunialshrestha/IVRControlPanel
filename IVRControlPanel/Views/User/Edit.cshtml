@model IVRControlPanel.Models.User
@{
    ViewBag.Title = "Edit User";
}
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<div class="box grid_12">
    <header>
        <div class="inner">
            <div class="left title">
                <h1>
                    Edit User</h1>
            </div>
            <div class="right">
                <a href="#" class="close">close</a>
            </div>
        </div>
    </header>
    <div class="box-content">
        @using (Html.BeginForm())
        {
            @Html.ValidationSummary(true)
            @Html.HiddenFor(model => model.ID)
                                           
            <div class="field fullwidth">
                <label for="text-input-normal">
                    @Html.LabelFor(model => model.RoleID, "Role")
                </label>
                @Html.DropDownList("RoleID", String.Empty)
                @Html.ValidationMessageFor(model => model.RoleID)
            </div>

            <div class="field fullwidth">
                <label>
                    @Html.LabelFor(model => model.Email)
                </label>
                @Html.EditorFor(model => model.Email)
                @Html.ValidationMessageFor(model => model.Email)
            </div>
            <div class="field fullwidth">
                <label>
                    @Html.LabelFor(model => model.Comments)
                </label>
                @Html.TextAreaFor(model => model.Comments)
                @Html.ValidationMessageFor(model => model.Comments)
            </div>
            <div class="field fullwidth">
                <label>
                    @Html.LabelFor(model => model.IsActivated)
                </label>
                @Html.EditorFor(model => model.IsActivated)
                @Html.ValidationMessageFor(model => model.IsActivated)
            </div>
         
            <footer class="pane">
                <input type="submit" class="bt blue" value="Save" />
            </footer>
        }
    </div>
</div>
<header class="grid_12 head">
    @Html.ActionLink("Back to List", "Index")
</header>