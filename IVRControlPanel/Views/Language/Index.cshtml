@model IEnumerable<IVRControlPanel.Models.Language>
@{
    ViewBag.Title = "Language List";
}
<header class="grid_12 head">
    @Html.ActionLink("Create New", "Create")
</header>
<!-- Table -->
<div class="grid_12 table" style="padding-top: 20px">
    <table>
        <thead>
            <tr>
                <th>
                    Language
                </th>
                <th>
                    Action
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Language1)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.ID }) |
                        @Html.ActionLink("Details", "Details", new { id = item.ID }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.ID })
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
<!-- /Table -->
